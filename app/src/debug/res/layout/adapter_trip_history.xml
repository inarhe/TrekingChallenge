<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/margin_listView_sides"
    android:layout_marginStart="@dimen/margin_listView_sides"
    android:layout_marginRight="@dimen/margin_listView_sides"
    android:layout_marginEnd="@dimen/margin_listView_sides">

    <TextView
        android:id="@+id/tvTripName"
        android:layout_width="@dimen/list_widthColumn_4x1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvTripDate"
        android:layout_width="@dimen/list_widthColumn_4x2"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvTripRoute"
        android:layout_width="@dimen/list_widthColumn_4x3"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTripDistance"
            android:layout_width="@dimen/list_widthColumn_4x4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvTripTime"
            android:layout_width="@dimen/list_widthColumn_4x4"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center" />

    </LinearLayout>


</LinearLayout>