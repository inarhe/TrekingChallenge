<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trip.ShowTripActivity">

    <include android:id="@+id/showTripToolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/cast_expanded_controller_control_toolbar_min_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icRouteShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_with_toolbar"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:layout_marginStart="@dimen/margin_left_right"
                android:src="@drawable/ic_landscape"/>

            <TextView
                android:id="@+id/tvRouteShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icRouteShowTrip"
                android:layout_toEndOf="@+id/icRouteShowTrip"
                android:layout_alignTop="@+id/icRouteShowTrip"
                android:layout_alignBottom="@+id/icRouteShowTrip"
                android:layout_marginLeft="@dimen/margin_left_with_icon"
                android:layout_marginStart="@dimen/margin_left_with_icon"
                android:gravity="center"
                android:text="@string/routeTrip"
                android:textStyle="bold"
                android:textSize="@dimen/title_info"/>

            <TextView
                android:id="@+id/tvRouteTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_below"
                android:layout_below="@+id/icRouteShowTrip"
                android:layout_alignLeft="@+id/tvRouteShowTrip"
                android:layout_alignStart="@+id/tvRouteShowTrip"
                android:textSize="@dimen/title2"/>

            <ImageView
                android:id="@+id/icDateShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_icon"
                android:layout_alignLeft="@+id/icRouteShowTrip"
                android:layout_alignStart="@+id/icRouteShowTrip"
                android:layout_below="@+id/tvRouteTrip"
                android:src="@drawable/ic_done"/>

            <TextView
                android:id="@+id/tvDateShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icDateShowTrip"
                android:layout_toEndOf="@+id/icDateShowTrip"
                android:layout_alignTop="@+id/icDateShowTrip"
                android:layout_alignBottom="@+id/icDateShowTrip"
                android:layout_marginLeft="@dimen/margin_left_with_icon"
                android:layout_marginStart="@dimen/margin_left_with_icon"
                android:gravity="center"
                android:text="@string/dateTrip"
                android:textStyle="bold"
                android:textSize="@dimen/title_info"/>

            <TextView
                android:id="@+id/tvDateTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_below"
                android:layout_below="@+id/icDateShowTrip"
                android:layout_alignLeft="@+id/tvDateShowTrip"
                android:layout_alignStart="@+id/tvDateShowTrip"
                android:textSize="@dimen/title2"/>

            <ImageView
                android:id="@+id/icPlaceShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_icon"
                android:layout_alignLeft="@+id/icRouteShowTrip"
                android:layout_alignStart="@+id/icRouteShowTrip"
                android:layout_below="@+id/tvDateTrip"
                android:src="@drawable/ic_flag"/>

            <TextView
                android:id="@+id/tvPlaceShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icPlaceShowTrip"
                android:layout_toEndOf="@+id/icPlaceShowTrip"
                android:layout_alignTop="@+id/icPlaceShowTrip"
                android:layout_alignBottom="@+id/icPlaceShowTrip"
                android:layout_marginLeft="@dimen/margin_left_with_icon"
                android:layout_marginStart="@dimen/margin_left_with_icon"
                android:gravity="center"
                android:text="@string/placeTrip"
                android:textStyle="bold"
                android:textSize="@dimen/title_info"/>

            <TextView
                android:id="@+id/tvPlaceTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_below"
                android:layout_below="@+id/icPlaceShowTrip"
                android:layout_alignLeft="@+id/tvPlaceShowTrip"
                android:layout_alignStart="@+id/tvPlaceShowTrip"
                android:textSize="@dimen/title2"/>

            <ImageView
                android:id="@+id/icDescShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_icon"
                android:layout_alignLeft="@+id/icRouteShowTrip"
                android:layout_alignStart="@+id/icRouteShowTrip"
                android:layout_below="@+id/tvPlaceTrip"
                android:src="@drawable/ic_description"/>

            <TextView
                android:id="@+id/tvDescShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icDescShowTrip"
                android:layout_toEndOf="@+id/icDescShowTrip"
                android:layout_alignTop="@+id/icDescShowTrip"
                android:layout_alignBottom="@+id/icDescShowTrip"
                android:layout_marginLeft="@dimen/margin_left_with_icon"
                android:layout_marginStart="@dimen/margin_left_with_icon"
                android:gravity="center"
                android:text="@string/descTrip"
                android:textStyle="bold"
                android:textSize="@dimen/title_info"/>

            <TextView
                android:id="@+id/tvDescTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_below"
                android:layout_below="@+id/icDescShowTrip"
                android:layout_alignLeft="@+id/tvDescShowTrip"
                android:layout_alignStart="@+id/tvDescShowTrip"
                android:textSize="@dimen/title2"/>

            <ImageView
                android:id="@+id/icMembShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_icon"
                android:layout_alignLeft="@+id/icRouteShowTrip"
                android:layout_alignStart="@+id/icRouteShowTrip"
                android:layout_below="@+id/tvDescTrip"
                android:src="@drawable/ic_people"/>

            <TextView
                android:id="@+id/tvMembShowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icMembShowTrip"
                android:layout_toEndOf="@+id/icMembShowTrip"
                android:layout_alignTop="@+id/icMembShowTrip"
                android:layout_alignBottom="@+id/icMembShowTrip"
                android:layout_marginLeft="@dimen/margin_left_with_icon"
                android:layout_marginStart="@dimen/margin_left_with_icon"
                android:gravity="center"
                android:text="@string/membTrip"
                android:textStyle="bold"
                android:textSize="@dimen/title_info"/>

            <TextView
                android:id="@+id/tvMembTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_with_icon"
                android:layout_marginStart="@dimen/margin_left_with_icon"
                android:gravity="center"
                android:layout_below="@+id/tvDescShowTrip"
                android:layout_toRightOf="@+id/tvMembShowTrip"
                android:layout_toEndOf="@+id/tvMembShowTrip"
                android:layout_alignTop="@+id/tvMembShowTrip"
                android:layout_alignBottom="@+id/tvMembShowTrip"
                android:textSize="@dimen/title2"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
