<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRating"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/cvRatingUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardView_margin_right"
            android:layout_marginLeft="@dimen/cardView_margin_right"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="@dimen/title2"/>

        <TextView
            android:id="@+id/cvRatingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cvRatingUser"
            android:layout_alignLeft="@+id/cvRatingUser"
            android:layout_below="@+id/cvRatingUser"
            android:layout_marginTop="@dimen/cardView_marginTop_subtitle"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/cvRatingOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cvRatingUser"
            android:layout_alignLeft="@+id/cvRatingUser"
            android:layout_below="@+id/cvRatingTitle"
            android:layout_marginTop="@dimen/cardView_marginTop_subtitle"/>

        <RatingBar
            android:id="@+id/rbUserRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>



