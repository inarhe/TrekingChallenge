<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewUser"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardView_user_height"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cvUserPhoto"
            android:cropToPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/cardView_margin_right"
            android:layout_marginEnd="@dimen/cardView_margin_right"/>

            <TextView
                android:id="@+id/cvUserAlias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cvUserPhoto"
                android:layout_toEndOf="@+id/cvUserPhoto"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="@dimen/title1"/>

            <TextView
                android:id="@+id/cvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cvUserPhoto"
                android:layout_toEndOf="@+id/cvUserPhoto"
                android:layout_below="@+id/cvUserAlias"/>

            <CheckBox
                android:id="@+id/checkListUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/cardView_marginTop_button_admin"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>



