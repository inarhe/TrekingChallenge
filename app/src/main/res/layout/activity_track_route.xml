<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".route.TrackRouteActivity">

    <include android:id="@+id/trackRouteToolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tvTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:padding="4dp"
        android:text="@string/trackTitle"
        android:textSize="@dimen/title_info"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/ivTrack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height_track"
        android:scaleType="fitCenter"
        android:cropToPadding="true"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_below="@+id/tvTrack" />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/ivTrack"
        android:layout_marginTop="@dimen/margin_below"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:padding="4dp"
        android:text="@string/profileTitle"
        android:textSize="@dimen/title_info"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height_track"
        android:scaleType="fitCenter"
        android:cropToPadding="true"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_below="@+id/tvProfile" />

    <TextView
        android:id="@+id/tvLinkOtherTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/ivProfile"
        android:layout_marginTop="@dimen/margin_below"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="@dimen/title_info"
        android:text="@string/otherTracks"/>

    <TextView
        android:id="@+id/tvLinkTracks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:autoLink="web"
        android:layout_below="@+id/tvLinkOtherTrack"
        android:layout_marginTop="@dimen/margin_below"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right" />

    <TextView
        android:id="@+id/tvWikiloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/tvLinkTracks"
        android:layout_marginTop="@dimen/margin_below"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:padding="4dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="@string/wikilocFont"/>

</RelativeLayout>
